# Ignore everything by default
*

# Allow important root files
!.gitignore
!composer.json
!composer.lock
!home-portal.php

# Include src folder and all its contents
!src/
!src/**

# Include react folder and all contents
!react/
!react/**

# But still ignore node_modules inside react
react/node_modules/

# Exclude vendor folder completely
vendor/

# Common system files to ignore
.DS_Store
Thumbs.db
.env
