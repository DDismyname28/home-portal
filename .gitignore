# Ignore everything by default
*

# Always include .gitignore and main plugin files
!.gitignore
!home-portal.php
!composer.json
!composer.lock
!loader.php

# Include src subfolders
!src/
!src/assets/
!src/assets/**
!src/includes/
!src/includes/**

# Ignore vendor (if you don't want to push dependencies)
vendor/

# Optional: ignore React build outputs if using create-react-app
react/build/
react/node_modules/
